<div class="w-full h-screen flex justify-center items-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Add Event</h2>

    <%= form_with model: @event, url: couples_events_path, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :event_name, "Event Name", class: "block font-medium mb-1" %>
        <%= f.text_field :event_name, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :event_date, "Event Date", class: "block font-medium mb-1" %>
        <%= f.date_field :event_date, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Add", class: "bg-red-300 text-white py-2 px-4 rounded-xl w-50 hover:bg-red-400" %>
      </div>
    <% end %>
  </div>
</div>
