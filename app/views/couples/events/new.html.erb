<h2 class="text-2xl font-bold mb-6">Add a New Event</h2>

<%= form_with model: @event, url: couples_events_path, local: true do |f| %>
  <div class="flex flex-row space-x-10">
    <div class="mb-4">
      <%= f.label :event_name, "Event Name", class: "block font-medium mb-1" %>
      <%= f.text_field :event_name, class: "border border-red-300 p-2 w-100 rounded-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :event_date, "Event Date", class: "block font-medium mb-1" %>
      <%= f.date_field :event_date, class: "border border-red-300 p-2 w-100 rounded-sm" %>
    </div>

    <div class="flex items-end mb-4">
      <%= f.submit "Add", class: "bg-red-400 text-white py-2 px-4 rounded-xl hover:bg-red-500" %>
    </div>
  </div>
<% end %>

<p class="text-gray-500 mt-4">You can add tasks after creating the event.</p>
