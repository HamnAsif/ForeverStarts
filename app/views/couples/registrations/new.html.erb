
<div class="w-full h-screen flex justify-center items-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Create Your Account</h2>

    <%= form_with url: couples_sign_up_path, method: :post, local: true do |f| %>
      <div class="mb-4">
        <%= label_tag "user[email]", "Email", class: "block font-medium mb-1" %>
        <%= email_field_tag "user[email]", nil, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class="mb-4">
        <%= label_tag "couple[bride_name]", "Bride Name", class: "block font-medium mb-1" %>
        <%= text_field_tag "couple[bride_name]", nil, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>
      
      <div class="mb-4">
        <%= label_tag "couple[groom_name]", "Groom Name", class: "block font-medium mb-1" %>
        <%= text_field_tag "couple[groom_name]", nil, class: "border border-red-300 p-2  w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class="mb-4">
        <%= label_tag "user[password]", "Password", class: "block font-medium mb-1" %>
        <%= password_field_tag "user[password]", nil, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class="mb-4">
        <%= label_tag "user[password_confirmation]", "Password confirmation", class: "block font-medium mb-1" %>
        <%= password_field_tag "user[password_confirmation]", nil, class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
      </div>

      <div class= "flex justify-center">
        <%= submit_tag "Sign Up as Couple", class: "bg-red-300 text-white py-2 px-4 rounded-xl w-50 hover:bg-red-400" %>
      </div>
    <% end %>
  </div>
</div>

