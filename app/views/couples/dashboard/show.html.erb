<div class="">


<div class="relative">
  <!-- Background Image -->
  <%= image_tag "dashboard1.jpg", class: "h-100 w-full object-cover ", alt: "Dashboard image" %>
  <div class="absolute inset-0 bg-black opacity-50"></div>

  <!-- Overlay Content -->
  <div class="absolute inset-0 flex items-center justify-center items-center text-4xl font-semibold text-gray-900 font-serif">
    Welcome <%= @vendor.bride_name%> & <%= @vendor.groom_name%>
  </div>
</div> 

<div class="p-4">
  <h2 class="text-2xl font-bold mb-4">Upcoming Events</h2>

  <div class="grid grid-cols-3 gap-6">
    <% current_user.authenticatable.events.order(:event_date).each do |event| %>
      <%= link_to couples_event_path(event), class: "bg-red-200 h-30 rounded p-4 flex flex-col justify-end hover:bg-red-300 transition duration-200" do %>
        <div class="mt-auto">
          <h3 class="text-xl font-semibold text-gray-700 font-semibold"><%= event.event_name %></h3>
          <p class="text-sm"><%= event.event_date.strftime("%b %d, %Y") %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>







