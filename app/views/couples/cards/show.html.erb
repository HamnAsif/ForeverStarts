<div class ="flex flex-col justify-between">

  <div class = "relative mt-10">
    <%= image_tag "card_templates/#{@card.template}.png", class: " w-100 h-150 mx-auto rounded-lg shadow" %>
    <div class="absolute flex flex-col justify-start items-center space-y-2 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
        
        <p class="text-md text-gray-500"><%= @card.invitation_line %></p>
        <p class="text-3xl font-bold italic mb-8 text-gray-700"><%= @card.couple.bride_name %> & <%= @card.couple.groom_name %></p>
        <p class="text-gray-700 font-semibold text-lg"><%= @card.event&.event_name %></p>      
        <p class="text-gray-500 mt-6">SAVE THE DATE </p>
        <p class="text-gray-700 text-2xl"><%= @card.event&.event_date.strftime('%B %d, %Y') if @card.event %></p>
        <p class="text-gray-700">Time: <%= @card.event_time.strftime('%I:%M %p') if @card.event_time %></p>
        <p class="text-gray-700 mt-6">Venue: <%= @card.venue %></p>
        <p class="text-gray-700">RSVP: <%= @card.rsvp_contact %></p>

    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to 'Download', download_image_couples_card_path(@card), class: "bg-red-400 text-white px-4 py-2 rounded hover:bg-red-500" %>
    
  </div>


</div>

<hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">


<!-- QR Code to open the same card -->
<h2 class="text-2xl font-bold mb-4">Your Wedding Invitation Card Inside This QRcode</h2>
<h3 class="text-xl font-semibold">Scan the QR Code</h3>
<%= image_tag generate_qr_for_card, alt: "QR Code", class: "w-24 h-24 mt-2" %>



