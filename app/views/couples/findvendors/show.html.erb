

<div class=" py-10 px-4 md:px-12 w-300 mx-auto">
  <!-- Profile Header -->
  <div class="flex flex-row items-center mx-10 space-x-10 ">
    <!-- Profile Image -->
    <% if @vendor.user&.profile_image&.attached? %>
      <%= image_tag url_for(@vendor.user.profile_image), class: "w-24 h-24 rounded-full object-cover shadow-md" %>
    <% else %>
      <img src="https://www.svgrepo.com/download/512697/profile-1341.svg" alt="Default Profile" class="w-24 h-24 rounded-full object-cover shadow-md bg-gray-200" />
    <% end %>

    <!-- Vendor Info -->
    <div class="text-center md:text-left">
      <h1 class="text-3xl font-bold text-gray-800"><%= @vendor.username %></h1>
      <p class="text-gray-600 mt-2 font-medium"><%= @vendor.category %></p>
      <p class="text-gray-600 mt-4 w-220">
        <%= @vendor.description.presence || "This vendor hasn’t added a description yet." %>
      </p>
    </div>
  </div>

  <!-- Contact Section -->
  <div class ="px-13 mb-10">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Contact</h2>
    <div class="divide-y divide-red-200 border border-red-200 rounded overflow-hidden w-250">
      <div class="flex justify-between bg-gray-50 px-4 py-3">
        <span class="font-medium text-gray-700">Location</span>
        <span class="text-gray-600 text-right"><%= @vendor.location %></span>
      </div>
      <div class="flex justify-between bg-gray-50 px-4 py-3">
        <span class="font-medium text-gray-700">Email</span>
        <span class="text-gray-600 text-right"><%= current_user.email %></span>
      </div>
      <div class="flex justify-between bg-gray-50 px-4 py-3">
        <span class="font-medium text-gray-700">Phone</span>
        <span class="text-gray-600 text-right"><%= @vendor.contact %></span>
      </div>
    </div>
  </div>

  <!-- Services Section -->
<div class="mt-20 mx-10">
  <h2 class="text-xl font-semibold mb-6 text-gray-800">Our Services</h2>

  <% if @vendor.services.any? %>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
      <% @vendor.services.each do |service| %>
        <%= link_to couples_service_path(service), class: "block" do %>
          <div class="w-full aspect-square overflow-hidden rounded">
            <% if service.images.attached? %>
              <%= image_tag url_for(service.images.first), class: "object-cover w-full h-full" %>
            <% else %>
              <div class="bg-gray-100 w-full h-full flex items-center justify-center text-gray-400">
                No Image
              </div>
            <% end %>
          </div>
          <div class="mt-2 text-sm font-medium text-gray-800 text-center">
            <%= service.title %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">This vendor hasn’t added any services yet.</p>
  <% end %>
</div>


</div>



