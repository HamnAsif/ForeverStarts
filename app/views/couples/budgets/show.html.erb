<div class="mt-6 mx-20">
  <!-- Header -->
  <div class="flex flex-col justify-start space-y-3 mb-6">
    <h1 class="font-semibold text-3xl">Budget Overview</h1>
    <p class="text-red-400">Manage your wedding expenses and track your spending.</p>
  </div>


  <%= turbo_frame_tag "budget_summary" do %>
    <%= render partial: "couples/budgets/budget_summary", locals: { budget: @budget, edit_mode: params[:edit].present? } %>
  <% end %>


  <!-- Services Table -->
  <h1 class="font-semibold text-2xl my-4">Your service expenses summary</h1>

  <% completed_appointments = @couple.appointments.completed.includes(:service) %>
  <% if completed_appointments.any? %>
    <table class="table-auto w-full border mt-4">
      <thead class="bg-red-100">
        <tr>
          <th class="border-2 border-red-300 px-4 py-2">Service Title</th>
          <th class="border-2 border-red-300 px-4 py-2">Price</th>
          <th class="border-2 border-red-300 px-4 py-2">Appointment Date</th>
        </tr>
      </thead>
      <tbody>
        <% completed_appointments.each do |appointment| %>
          <tr>
            <td class="border-2 border-red-300 px-4 py-2"><%= appointment.service.title %></td>
            <td class="border-2 border-red-300 px-4 py-2">Rs <%= number_with_delimiter(appointment.service.price) %></td>
            <td class="border-2 border-red-300 px-4 py-2"><%= appointment.appointment_datetime.strftime("%B %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center text-gray-600 mt-6">
      <p class="text-lg italic">You have not availed any services yet. Start booking appointments to track your spending!</p>
    </div>
  <% end %>
</div>
