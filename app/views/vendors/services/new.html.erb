<div class = "flex flex-row justify-between mt-4">
    <h1 class="text-2xl font-bold mb-6">My Services</h1>
    <div data-controller="dialog" class="relative ml-14">
        <!-- Open Modal Button -->
        <button 
            data-action="click->dialog#open" 
            class="bg-red-400 text-white px-4 py-2 rounded hover:bg-red-500">
            Add Services
        </button>

        <!-- Backdrop -->
        <div data-dialog-target="backdrop" class="fixed inset-0 bg-black/40 backdrop-blur-sm z-40 hidden transition-opacity"></div>

        <!-- Modal Dialog -->
        <dialog data-dialog-target="modal" class="fixed z-50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 open:flex rounded-md p-0 overflow-hidden shadow-lg w-full max-w-md hidden"> 
            <%= form_with model: @service, url: vendors_services_path, local: true, html: { multipart: true }, class: "w-full p-4 bg-white" do |f| %>
            <h2 class="text-xl font-semibold text-center text-red-400 mb-4">Add a New Service</h2>


            <!-- Title -->
            <div class="mb-4">
                <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :title, required: true, class: "w-full border border-red-300 rounded px-3 py-2" %>
            </div>

            <!-- Price -->
            <div class="mb-4">
              <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
              <%= f.number_field :price, required: true,class: "w-full border border-red-300 rounded px-3 py-2" %>
            </div>


            <!-- Caption -->
            <div class="mb-4">
                <%= f.label :caption, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_area :caption, rows: 3, required: true, class: "w-full border border-red-300 rounded px-3 py-2" %>
            </div>


            <!-- Images -->
            <div class="mb-4">
                <%= f.label :images, "Upload Images", class: "block text-sm font-medium text-gray-700" %>
                <%= f.file_field :images, multiple: true, class: "w-full" %>
            </div>

            <!-- Buttons -->
            <div class="flex justify-between mt-4">
                <%= f.submit "Save Service", class:"bg-red-300 text-white px-4 py-2 rounded hover:bg-red-400" %>
                <button type="button" data-action="click->dialog#close" class="border border-red-400 text-red-500 px-4 py-2 rounded hover:bg-red-100">Cancel</button>
            </div>
            <% end %>
        </dialog>
        </div>
</div>

<% if @services.empty? %>
  <div class="bg-yellow-100 text-yellow-800 p-4 rounded mb-4">
    You haven't added any services yet.
  </div>
<% else %>
  <!-- Instagram-style grid layout with image and title below -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
    <% @services.each do |service| %>
      <%= link_to vendors_service_path(service), class: "block" do %>
        <div class="w-full aspect-square overflow-hidden rounded">
          <% if service.images.attached? %>
            <%= image_tag url_for(service.images.first), class: "object-cover w-full h-full" %>
          <% else %>
            <div class="bg-gray-100 w-full h-full flex items-center justify-center text-gray-400">
              No Image
            </div>
          <% end %>
        </div>
        <div class="mt-2 text-sm font-medium text-gray-800 text-center">
          <%= service.title %>
        </div>
      <% end %>
    <% end %>
  </div>

<% end %>
