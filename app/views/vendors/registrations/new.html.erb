<div class="w-full h-screen flex justify-center items-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Create Your Account</h2>

    <%= form_with url: vendors_sign_up_path, method: :post, local: true do |f| %>
      <div class="mb-4">
        <%= label_tag :username, "Username", class: "block font-medium mb-1" %>
        <%= text_field_tag :username, nil, class: "border border-red-300 p-2 w-full hover:border-red-400" %>
      </div>

      <div class="mb-4">
        <%= label_tag :category, "Category", class: "block font-medium mb-1" %>
        <%= select_tag :category, options_for_select(Vendor::SERVICE_TYPES), prompt: "Select a service", class: "border border-red-300 p-2 rounded-sm w-full hover:border-red-400" %>
      </div>

      <div class="mb-4">
        <%= label_tag :email, "Email", class: "block font-medium mb-1" %>
        <%= email_field_tag :email, nil, class: "border border-red-300 p-2 rounded-sm w-full hover:border-red-400" %>
      </div>

      <div class="mb-4">
        <%= label_tag :password, "Password", class: "block font-medium mb-1" %>
        <%= password_field_tag :password, nil, class: "border border-red-300 p-2 rounded-sm w-full hover:border-red-400" %>
      </div>

      <div class="mb-4">
        <%= label_tag :password_confirmation, "Password confirmation", class: "block font-medium mb-1" %>
        <%= password_field_tag :password_confirmation, nil, class: "border border-red-300 p-2 rounded-sm w-full hover:border-red-400" %>
      </div>

      <div class= "flex justify-center">
        <%= submit_tag "Sign Up as Vendor", class: "bg-red-300 text-white py-2 px-4 rounded-xl w-50 hover:bg-red-400" %>
      </div>
    <% end %>
  </div>
</div>
