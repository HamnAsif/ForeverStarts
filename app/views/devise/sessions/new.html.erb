<div class="w-full h-screen flex justify-center items-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Login Your Account</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, "Email", class: "block font-medium mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-red-300 p-2 w-full rounded-sm focus:outline-none focus:border-red-400 focus:border-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "Password", class: "block font-medium mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-red-300 p-2 rounded-sm w-full focus:outline-none focus:border-red-400 focus:border-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center space-x-2">
      <%= f.check_box :remember_me, class: "accent-red-300" %>
      <%= f.label :remember_me, class: "text-red-300" %>
    </div>
  <% end %>

  <div class="my-6 flex justify-center">
    <%= f.submit "Login", class: "bg-red-400 text-white py-2 px-4 rounded-xl w-50 hover:bg-red-500" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  </div>
</div>

